
<%= form_for @cocktail do |f| %>
<%= f.input :name %>
<%= f.association :ingredients, as: :radio_buttons %>
<div class="fields">
  <%= f.fields_for :doses do |builder| %>
  <%= builder.text_field :description %>
  <% end %>
</div>
  <%= f.button :submit %>
  <%= link_to_add_row('Add Ingredient', f, :doses, class: 'btn btn-primary') %>
<% end %>
